mixin category-variety(data)
  .category
    .category__img
      img(src=`img/content/product-1.png`, alt="Изображения")
    .category__content
      h3.category__title-product!= data.title
      p.category__price от #[strong 990,00 ₽]
      .category__wrap
        a.category__link.category__link--dotted(href="#modal-char" data-fancybox="") Характеристики
        a.btn.btn--s-middle.btn--main.category__btn(href="#modal-order" data-fancybox="") Заказать
