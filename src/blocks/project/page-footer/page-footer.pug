mixin page-footer()
  footer.page-footer
    .page-footer__main
      .page-footer__line
        .container
          .page-footer__row
            .page-footer__col.page-footer__col--xl-3
              .footer-nav
                ul.footer-nav__list
                  li.footer-nav__item.footer-nav__item--ident
