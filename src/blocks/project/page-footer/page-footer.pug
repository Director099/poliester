        .container
          .page-footer__row
            .page-footer__col.page-footer__col--xl-3
              +footer-nav('Полипропиленовая продукция')
                +footer-nav-item('Мешки полипропеленовые')
                +footer-nav-item('Биг-бэги (Мягкие контейнера)')
